    <style name="cart_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="superBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <declare-styleable name="TouchableTabLayout">
        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabIndicatorHeight" format="dimension" />
        <attr name="tabContentStart" format="dimension" />
        <attr name="tabBackground" format="reference" />
        <attr name="tabMinWidth" format="dimension" />
        <attr name="tabMaxWidth" format="dimension" />
        <attr name="tabTextAppearance" format="reference" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectedTextColor" format="color" />
        <attr name="tabPaddingStart" format="dimension" />
        <attr name="tabPaddingTop" format="dimension" />
        <attr name="tabPaddingEnd" format="dimension" />
        <attr name="tabPaddingBottom" format="dimension" />
        <attr name="tabPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TouchableTabLayoutTextAppearance">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
    </declare-styleable>
    <dimen name="design_touchable_tab_text_size_2line">@dimen/_12sdp</dimen>
    <dimen name="design_touchable_tab_scrollable_min_width">@dimen/_72sdp</dimen>

    <style name="CustomText">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <!--for transparent Activity-->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:elevation">@dimen/_16sdp</item>
        <item name="behavior_peekHeight">@dimen/_120sdp</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="LeftDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_left</item>
        <item name="android:windowExitAnimation">@anim/exit_left</item>
    </style>

    <style name="RightDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_right</item>
        <item name="android:windowExitAnimation">@anim/exit_right</item>
    </style>

    <style name="TopDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_top</item>
        <item name="android:windowExitAnimation">@anim/exit_top</item>
    </style>

    <style name="BottomDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_bottom</item>
    </style>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level" value="1" />
        </attr>
        <attr name="flingVelocity" format="integer" />
        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>
</resources>
